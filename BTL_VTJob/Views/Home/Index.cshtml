@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<BTL_VTJob.Models.BaiTuyenDung>

 @if(Context.Session.GetString("Quyen")== "Admin")
        {
            <div class="col-12 main-ad">
                <section class="col-3 menu-ad">
                    <H5 style="color:#000;"><b>Quản lý</b></H5>
                    <div class="wrap-menu-ad">
                        <ul id="ul-menu">
                            <li class="li-menu">
                                <a class="link-menu">Người dùng</a>
                            </li>
                            <li class="li-menu">
                                <a class="link-menu">Nhà tuyển dụng</a>
                            </li>
                            <li class="li-menu">
                                <a class="link-menu">Bài đăng</a>
                            </li>
                        </ul>
                    </div>
                </section>
                <section class="col-9 wrap-main-ad">
                    <div class="wrap-main-ad-inner">
                        <main role="main">
                           
                        </main>
                    </div>
                </section>
            </div>

        }
        else
        {
<section class="site-section" id="next-section">
    <div class="container">

        <div class="row">
             @foreach (var item in Model)
            {
            <div class="col-lg-6 mb-4">
                <div class="block__87154">
                    
                    <div class="block__91147 d-flex align-items-center">
                        <div class="w-25 p-2"><img src="~/images/@item.DoanhNghiep.Anh" alt="Image" class="img-fluid "></div>
                        <div class="p-2 w-75">
                                <blockquote>
                                    <a asp-action="DetailJob" asp-controller="BaituyenDung" asp-route-id="@item.MaBai"> <p class="h3 text-dark"><strong>@item.TieuDe</strong></p></a>
                                    <p class="">@item.DoanhNghiep.TenCT</p>

                                </blockquote>
                               @* <h3><b>@item.TieuDe</b></h3>*@
                                <p class="h6">Số lượng:@item.SoLuongTuyen</p>
                                <p>Mức lương:@item.MucLuong</p>
                                <p>Hạn:@item.HanNopCV</p>
                        </div>
                    </div>
                </div>
            </div>
            }

        </div>
    </div>
</section>

}