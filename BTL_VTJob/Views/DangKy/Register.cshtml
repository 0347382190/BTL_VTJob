@model BTL_VTJob.ViewModel.RegisterVM

@*@{
    ViewData["Title"] = "Register";
}*@
<div class="container h-100">

    <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">

                <div class="row justify-content-center">

                    <h2 class="text-center">Đăng ký</h2>
                    <div class="col-lg-10 col-xl-8">
                       
                            <div class="card-body p-4 p-md-5">

                            <form asp-action="Register" class="px-md-2" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class=" form-outline ">
                                <label asp-for="Hoten" class="control-label"></label>
                                <input asp-for="Hoten" class="form-control" />
                                <span asp-validation-for="Hoten" class="text-danger"></span>
                            </div>
                            <div class="  form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <label asp-for="SoDT" class="control-label"></label>
                                <input asp-for="SoDT" class="form-control" />
                                <span asp-validation-for="SoDT" class="text-danger"></span>
                            </div>
                           
                            <div class="row ">
                                <div class="col">
                                    <label asp-for="MatKhau" class="control-label"></label>
                                    <input asp-for="MatKhau" class="form-control" type="password" />
                                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="MatKhauXacNhan" class="control-label"></label>
                                    <input asp-for="MatKhauXacNhan" class="form-control" type="password" />
                                    <span asp-validation-for="MatKhauXacNhan" class="text-danger"></span>
                                </div>
                            </div>
                
                            <div class="text-center">
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 m-2">
                                    <button type="submit" class="btn btn-primary btn-lg" style="width:310px">Đăng ký</button>
                                </div>
                                Hoặc
                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4 m-2">
                                    <button class="btn btn-primary btn-lg" style="width:310px">Đăng nhập</button>
                                </div>
                            </div>
                            @* <div class="form-group m-2 text-center">
                            <input type="submit" value="ĐĂNG KÝ" class="btn btn-primary w-75" />
                            </div>*@
                        </form>
                    </div>
                       
                    </div>

                </div>


            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<a href="~/lib/jquery/dist/jquery.min.map"></a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        if ($('#isProvider').val() == "User") {
            $('#TenCTProvider').hide();
            $('#AnhProvider').hide();
            $('#MoTaProvider').hide();
            $('#DiaChiProvider').hide();
        }
        else {
            $('#TenCTProvider').show();
            $('#MoTaProvider').show();
            $('#DiaChiProvider').show();
            $('#AnhProvider').show();
        }

        $('#isProvider').change(function () {
            var selectedValue = jQuery(this).val();

            if (selectedValue != "User") {

                $('#TenCTProvider').show();
                $('#MoTaProvider').show();
                $('#DiaChiProvider').show();
                $('#AnhProvider').show();

            }
            else {

                $('#TenCTProvider').hide();
                $('#MoTaProvider').hide();
                $('#DiaChiProvider').hide();
                $('#AnhProvider').hide();
            }
        });
    })

</script>
