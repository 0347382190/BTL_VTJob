
@{
    ViewData["Title"] = "Login";
}
<div class="col-12 wrap-form">
    <div class="container_form login">
        <div class="container_form-inner">
            <h2 style="text-align:center; margin: 10px;">Đăng nhập</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Email</label><br>
                    <input name="email" id="email" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Mật khẩu</label>
                    <input name="matkhau" id="matkhau" class="form-control" type="password" />
                    <span class="text-danger">@ViewBag.checkMatKhau</span>
                </div>

                <div style="text-align:center; margin-top: 10px;">
                    <button type="submit" class="btn" style="width:310px">Đăng nhập</button>
                    <br />
                    New User?
                    <br />
                    <a asp-action="Register" asp-controller="DangKy" class="btn" style="width:310px">Đăng ký</a>
                </div>
            </form>
        </div>
    </div>
</div>
    
        

   
